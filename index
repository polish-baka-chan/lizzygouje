  <script>
    function showTab(id) {
      const all = document.querySelectorAll('.card');
      all.forEach(c => c.classList.remove('active'));
      const el = document.getElementById(id);
      if (el) {
        el.classList.add('active');
      } else {
        console.warn('Brak karty o id:', id);
      }
    }
  </script>
